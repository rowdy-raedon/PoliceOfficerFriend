{
  "expo": {
    "name": "Police Officer Friend",
    "slug": "police-officer-friend",
    "version": "1.0.0",
    "orientation": "landscape",
    "userInterfaceStyle": "light",
    "splash": {
      "backgroundColor": "#1E3A8A"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE"
      ]
    },
    "plugins": [
      [
        "expo-av",
        {
          "microphonePermission": "Allow Police Officer Friend to access your microphone to talk with Officer Smith."
        }
      ]
    ]
  }
}